{
    "author": "Samy Pesse",
    "name": "tv.js",
    "description": "Smart TV with P2P streaming in JS (Node/Chrome).",
    "version": "0.0.1",
    "dependencies": {
        "q": "0.9.6",
        "underscore": "1.4.4",

        "request": "2.22.0",

        "express": "3.0.0",
        "socket.io": "0.9.16",

        "fluent-ffmpeg": "1.5.2",
        "peerflix": "~0.1.0",

        "readable-stream": "1.0.2"
    },
    "engines": {
        "node": "0.8.x",
        "npm": "1.1.x"
    },
    "bin": {
        "movies.js": "bin/run.js"
    },
    "contributors": [
        {
            "name": "Aaron O'Mullan",
            "email": "aaron.omullan@gmail.com"
        }
    ],

    "main": "http://localhost:8888",
    "node-main": "bin/run.js",
    "window": {
        "title": "Tv.js",
        "icon": "public/main/build/static/images/logo_48.png",
        "toolbar": false,
        "frame": false,
        "width": 800,
        "height": 600,
        "position": "mouse",
        "min_width": 800,
        "min_height": 600,
        "max_width": 5000,
        "max_height": 5000,
        "resizable": true,
        "fullscreen": true
    },
    "webkit": {
        "plugin": true
    }
}
